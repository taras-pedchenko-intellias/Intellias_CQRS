{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "globalPrefix": {
      "type": "string",
      "metadata": {
        "description": "Global prefix."
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment name."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "testsApplicationSuffix": {
      "type": "string",
      "metadata": {
        "description": "Tests application suffix."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage account type."
      }
    }
  },
  "variables": {
    "storageResourceName": "[concat(parameters('globalPrefix'), parameters('environment'), parameters('testsApplicationSuffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageResourceName')]",
      "apiVersion": "2022-09-01",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      }
    }
  ],
  
}
